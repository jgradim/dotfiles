[user]
  name = JoaÌƒo Gradim
  email = joao.gradim@gmail.com

[includeIf "gitdir:~/work/lom/"]
  path = .gitconfig-lom

[includeIf "gitdir:~/work/lom/mobility-labs"]
  path = .gitconfig-mobility-labs

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRSX
  whitespace = blank-at-eol,blank-at-eof,trailing-space,space-before-tab,indent-with-non-tab
  merge-options = --no-ff
  editor = vim
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix

[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  cp = cherry-pick

[push]
  default = simple
