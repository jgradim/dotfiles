  email = joao.gradim@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRSX
  whitespace = fix,-indent-with-none-tab,trailing-space,cr-at-eol
  merge-options = --no-ff
  editor = vim

[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  cp = cherry-pick

[push]
  default = simple
